---
import Layout from '../layouts/Layout.astro';
import Header from '../components/navigation/Header.astro';
import HeroSection from '../components/sections/HeroSection.astro';
import Awards from '../components/sections/Awards.astro';
import LoanPurpose from '../components/sections/LoanPurpose.astro';
import BankLogos from '../components/sections/BankLogos.astro';
import MortgageRentCalculator from '../components/calculators/MortgageRentCalculator.tsx';
import PropertyMap from '../components/sections/PropertyMap.astro';
import Statistics from '../components/sections/Statistics.astro';
import Reviews from '../components/sections/Reviews.astro';
import Footer from '../components/sections/Footer.astro';
import Container from '../components/atoms/Container/Container.astro';
import '../components/calculators/MortgageRentCalculator.css';
---

<Layout title="Hunter Galloway - Award-Winning Mortgage Brokers Brisbane" 
       description="Award-winning mortgage brokers with 97% approval rate. Access to 30+ lenders. Get home loan guidance and expert assistance from Brisbane's #1 rated mortgage broker.">
  <Header />
  
  <div id="main-content">
    <!-- Hero Section - Exact WordPress Content -->
    <HeroSection />

    <!-- Awards Section -->
    <Awards />

    <!-- Loan Purpose Section -->
    <LoanPurpose />

    <!-- Bank Logos Section -->
    <BankLogos />

    <!-- Mortgage vs Rent Calculator Section -->
    <Container>
      <MortgageRentCalculator client:load />
      
      <!-- Property Map Section -->
      <PropertyMap />

      <!-- Borrowing Capacity Calculator Placeholder -->
      <!-- This would be the calculate-capacity component from WordPress -->
      
      <!-- Statistics Section -->  
      <Statistics />
    </Container>

    <!-- Reviews Section -->
    <Reviews />
  </div>
  
  <Footer />
</Layout>
