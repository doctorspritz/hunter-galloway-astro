              <Typography size="xs" color="secondary">{colors.neutral.dark}</Typography>
            </div>
            <div class="swatch">
              <div class="swatch-box" style={`background:${colors.semantic.success}`}></div>
              <Typography size="sm" weight="strong">Success</Typography>
              <Typography size="xs" color="secondary">{colors.semantic.success}</Typography>
            </div>
            <div class="swatch">
              <div class="swatch-box" style={`background:${colors.semantic.error}`}></div>
              <Typography size="sm" weight="strong">Error</Typography>
              <Typography size="xs" color="secondary">{colors.semantic.error}</Typography>
            </div>
            <div class="swatch">
              <div class="swatch-box" style={`background:${colors.semantic.warning}`}></div>
              <Typography size="sm" weight="strong">Warning</Typography>
              <Typography size="xs" color="secondary">{colors.semantic.warning}</Typography>
            </div>
            <div class="swatch">
              <div class="swatch-box" style={`background:${colors.semantic.info}`}></div>
              <Typography size="sm" weight="strong">Info</Typography>
              <Typography size="xs" color="secondary">{colors.semantic.info}</Typography>
            </div>
            <div class="swatch">
              <div class="swatch-box" style={`background:${colors.semantic.lightBlue}`}></div>
              <Typography size="sm" weight="strong">Light Blue</Typography>
              <Typography size="xs" color="secondary">{colors.semantic.lightBlue}</Typography>
            </div>
            <div class="swatch">
              <div class="swatch-box" style={`background:${colors.semantic.cream}`}></div>
              <Typography size="sm" weight="strong">Cream</Typography>
              <Typography size="xs" color="secondary">{colors.semantic.cream}</Typography>
            </div>
          </div>
          
          <div class="component-docs">
            <div class="component-title">Color System</div>
            <div class="component-description">Primary brand colors, semantic colors, and component-specific colors with CSS custom properties for easy theming.</div>
            <div class="component-props">import { colors, semantic } from '@/tokens'</div>
          </div>
        </div>

        <!-- Typography -->
        <div class="component-demo">
          <Typography element="h3" size="xl" weight="heading">Typography</Typography>
          <div class="grid">
            <div>
              <Typography element="h1" size="5xl" weight="display">Heading 1</Typography>
              <Typography size="sm" color="secondary">5xl / Display / Tight</Typography>
            </div>
            <div>
              <Typography element="h2" size="3xl" weight="heading">Heading 2</Typography>
