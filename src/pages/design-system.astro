            <Input label="Name" name="name" placeholder="Your name" />
            <Input label="Email" name="email" type="email" placeholder="you@example.com" />
            <Input label="Phone" name="phone" type="tel" placeholder="0400 000 000" />
          </div>
          
          <div class="component-docs">
            <div class="component-title">Input Component</div>
            <div class="component-description">Form input component with labels, validation states, and consistent styling across all form types.</div>
            <div class="component-props">label: string</div>
