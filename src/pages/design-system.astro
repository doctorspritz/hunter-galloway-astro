            <div class="component-props">required: boolean</div>
          </div>
        </div>

        <!-- Image Atom -->
        <div class="component-demo">
          <Typography element="h3" size="xl" weight="heading">Image (New Atom)</Typography>
          
          <div style="margin-bottom: 1rem; padding: 1rem; background: #f0f8ff; border-radius: 8px; border-left: 4px solid #3b82f6;">
            <Typography size="sm" weight="strong">‚ú® New Image Atom</Typography>
            <Typography size="xs" color="secondary">Created as fundamental building block for all visual content. Self-contained with lazy loading and responsive behavior.</Typography>
          </div>
          
          <div class="grid">
            <div>
              <Image 
                src="https://via.placeholder.com/300x200/FDB948/000000?text=Hero+Image" 
                alt="Hero image example" 
