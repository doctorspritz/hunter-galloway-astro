import { colors, typography, spacing, effects, semantic, primitive } from '../tokens';
---

<Layout title="Design System">
  <style is:global>
    /* Remove problematic global overrides - let the header work normally */
  </style>
  <style>
    .design-system {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    .section {
      margin-bottom: 4rem;
      padding: 2rem;
      border: 1px solid #e5e7eb;
      border-radius: 12px;
      background: #fff;
    }
    
    .section-header {
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f3f4f6;
    }
    
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .component-demo {
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      padding: 1.5rem;
      background: #fafafa;
    }
    
    .component-docs {
      margin-top: 1rem;
      padding: 1rem;
      background: #f8fafc;
      border-radius: 6px;
      border-left: 4px solid #3b82f6;
    }
    
    .component-title {
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 0.5rem;
    }
    
    .component-description {
      color: #6b7280;
      font-size: 0.875rem;
      margin-bottom: 0.5rem;
    }
    
    .component-props {
      font-family: 'Monaco', 'Menlo', monospace;
      font-size: 0.75rem;
      color: #374151;
      background: #f3f4f6;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
    }
    
    .swatch {
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      padding: 1rem;
      background: #fff;
    }
    
    .swatch-box {
      height: 64px;
      border-radius: 6px;
      margin-bottom: 0.75rem;
      border: 1px solid #d1d5db;
    }
    
    .token-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
    
    .organism-stack {
      display: flex;
      flex-direction: column;
      gap: 3rem;
    }
    
    .organism-block {
      width: 100%;
      position: relative;
      overflow: visible;
    }
    
    .organism-block > * {
      display: block;
      width: 100%;
    }
    
    .nav-tabs {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 2rem;
      border-bottom: 1px solid #e5e7eb;
    }
    
    .nav-tab {
      padding: 0.75rem 1.5rem;
      border: none;
      background: none;
      cursor: pointer;
      border-bottom: 2px solid transparent;
      color: #6b7280;
      font-weight: 500;
      transition: all 0.2s ease;
    }
    
    .nav-tab:hover {
      color: #3b82f6;
    }
    
    .nav-tab.active {
      color: #3b82f6;
      border-bottom-color: #3b82f6;
    }
    
    .tab-content {
      display: none;
    }
    
    .tab-content.active {
      display: block;
    }

    /* Remove problematic dropdown overrides - let the header work normally */
    
    /* Design System specific styles for better header demo */
    .design-system .hg-header {
      position: relative;
      z-index: 1000;
    }
    
    /* Add some spacing for the header demo */
    .organism-block {
      margin-bottom: 2rem;
    }
    
    /* Ensure the header demo doesn't interfere with other components */
    .design-system .hg-header .hg-dropdown {
      z-index: 1001;
    }
  </style>

  <div class="design-system">
    <section class="section">
      <div class="section-header">
        <Typography element="h1" size="3xl" weight="display">Hunter Galloway Design System</Typography>
        <Typography>A comprehensive atomic design system built with Astro components and design tokens.</Typography>
        
        <div style="margin-top: 2rem; padding: 1.5rem; background: #f0f8ff; border-radius: 8px; border-left: 4px solid #3b82f6;">
          <Typography element="h3" size="lg" weight="heading" style="margin-bottom: 0.5rem;">‚úÖ Atomic Design Refactoring Complete</Typography>
          <Typography size="sm" color="secondary" style="margin-bottom: 1rem;">Successfully implemented proper atomic design hierarchy with the following improvements:</Typography>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
            <div>
              <Typography size="sm" weight="strong">‚öõÔ∏è Atoms (Self-contained)</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ Button: Now uses text prop instead of slots</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ Badge: Simplified with text prop</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ Image: New responsive atom created</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ Max 5 props, single responsibility</Typography>
            </div>
            <div>
              <Typography size="sm" weight="strong">üß¨ Molecules (Composed)</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ NavItem/NavLink: Moved from atoms</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ BenefitCard: New molecule created</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ Proper atom composition patterns</Typography>
            </div>
            <div>
              <Typography size="sm" weight="strong">üîó Structure (Clean)</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ Removed duplicate components</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ Eliminated sections/ directory</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ PageTemplate created</Typography>
              <Typography size="xs" color="secondary">‚Ä¢ Proper import hierarchy enforced</Typography>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Navigation Tabs -->
    <div class="nav-tabs">
      <button class="nav-tab active" data-tab="tokens">Design Tokens</button>
      <button class="nav-tab" data-tab="atoms">Atoms</button>
      <button class="nav-tab" data-tab="molecules">Molecules</button>
      <button class="nav-tab" data-tab="organisms">Organisms</button>
      <button class="nav-tab" data-tab="templates">Page Templates</button>
    </div>

    <!-- Design Tokens Tab -->
    <div id="tokens" class="tab-content active">
      <section class="section">
        <div class="section-header">
          <Typography element="h2" size="2xl" weight="heading">Design Tokens</Typography>
          <Typography>Foundation values for colors, typography, spacing, and effects used throughout the system.</Typography>
        </div>

        <!-- Colors -->
        <div class="component-demo">
          <Typography element="h3" size="xl" weight="heading">Colors</Typography>
          <div class="token-grid">
            <div class="swatch">
              <div class="swatch-box" style={`background:${colors.primary.yellow}`}></div>
              <Typography size="sm" weight="strong">Primary Yellow</Typography>
              <Typography size="xs" color="secondary">{colors.primary.yellow}</Typography>
            </div>
            <div class="swatch">
              <div class="swatch-box" style={`background:${colors.primary.yellowDark}`}></div>
