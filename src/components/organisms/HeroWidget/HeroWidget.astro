---
/**
 * HeroWidget Organism
 * Combines multiple molecules to create a hero section
 */

import Container from '../../atoms/Container/Container.astro';
import BenefitItem from '../../molecules/BenefitItem/BenefitItem.astro';
import ExperienceBadge from '../../molecules/ExperienceBadge/ExperienceBadge.astro';
import ReviewBadge from '../../molecules/ReviewBadge/ReviewBadge.astro';

interface BenefitItemData {
  text: string;
  tooltip?: string;
}

interface CTAConfig {
  text: string;
  href: string;
}

interface ImageConfig {
  desktop: string;
  mobile: string;
  alt: string;
}

interface ReviewsConfig {
  logoSrc?: string;
  text: string;
}

interface Props {
  titleHtml: string;
  benefits: BenefitItemData[];
  cta: CTAConfig;
  image: ImageConfig;
  yearsExperience?: string;
  reviews?: ReviewsConfig;
}

const {
  titleHtml,
  benefits,
  cta,
  image,
  yearsExperience = '14',
  reviews = { logoSrc: '/images/img_new/google.svg', text: 'Based on<br/>2000+ reviews' },
} = Astro.props;
---

<section class="hero-widget">
  <Container>
    <div class="hero-widget__layout">
      <!-- Content Column -->
      <div class="hero-widget__content">
        <!-- Title -->
        <div class="hero-widget__title">
          <h1 set:html={titleHtml}></h1>
        </div>

        <!-- Benefits List -->
        <div class="hero-widget__benefits">
          {benefits.map((item) => (
            <BenefitItem text={item.text} tooltip={item.tooltip} />
          ))}
        </div>

        <!-- CTA Button -->
        <div class="hero-widget__cta">
          <a href={cta.href} class="hero-widget__button">
            {cta.text}
          </a>
        </div>

        <!-- Features Row -->
        <div class="hero-widget__features">
          <ExperienceBadge years={yearsExperience} />
          <ReviewBadge logoSrc={reviews.logoSrc} text={reviews.text} />
        </div>
      </div>

      <!-- Image Column -->
      <div class="hero-widget__image">
        <img src={image.desktop} alt={image.alt} loading="eager" />
      </div>
    </div>
  </Container>
</section>

<style>
.hero-widget {
  padding: 12px 0 50px 0;
  background: white;
}

.hero-widget__layout {
  display: flex;
  align-items: flex-start;
  gap: 64px;
  min-height: 500px;
}

.hero-widget__content {
  flex: 1;
  max-width: 680px;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.hero-widget__title h1 {
  font-family: 'Open Sans', sans-serif;
  font-size: 40px;
  line-height: 48px;
  color: #444444;
  margin: 0;
  padding-bottom: 10px;
}

.hero-widget__title h1 b {
  font-weight: 800;
}

.hero-widget__benefits {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding-bottom: 8px;
}

.hero-widget__cta {
  display: flex;
  justify-content: flex-start;
}

.hero-widget__button {
  background: #FDB948;
  color: #262626;
  font-size: 18px;
  font-weight: 600;
  line-height: 48px;
  padding: 0 32px;
  border-radius: 33px;
  text-decoration: none;
  display: inline-block;
  min-height: 48px;
  text-align: center;
}

.hero-widget__features {
  display: flex;
  gap: 64px;
  padding-top: 40px;
}

.hero-widget__image {
  flex-shrink: 0;
  width: 560px;
  max-width: 560px;
}

.hero-widget__image img {
  width: 100%;
  height: auto;
  border-radius: 8px;
}

/* Responsive */
@media (max-width: 1024px) {
  .hero-widget__layout {
    flex-direction: column;
    gap: 32px;
  }
  
  .hero-widget__image {
    width: 100%;
    max-width: 100%;
  }
}
</style>

