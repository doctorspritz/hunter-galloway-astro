---
/**
 * Statistics Section - "Why Choose" from WordPress
 * Refactored to use Hunter Galloway Design System components
 */
import Container from '../atoms/Container/Container.astro';
import Typography from '../atoms/Typography/Typography.astro';
import StatCard from '../molecules/StatCard/StatCard.astro';
import { semantic } from '../../tokens/semantic';

const stats = [
  {
    number: "97%",
    description: "Loan approval rate"
  },
  {
    number: "14", 
    description: "years of experience"
  },
  {
    number: "2,000+",
    description: "Happy customers" 
  },
  {
    number: "30+",
    description: "Banks and lenders we have direct access to"
  }
];
---

<section id="why_choose" class="hg-statistics-section">
  <Container>
    <div class="section-header">
      <Typography 
        element="h2" 
        size="4.5xl" 
        weight="bold" 
        align="center"
        color="primary"
        class="section-title"
      >
        Why Hunter Galloway is the ultimate choice
      </Typography>
    </div>
    
    <div class="hg-stats-grid">
      {stats.map((stat) => (
        <StatCard
          number={stat.number}
          description={stat.description}
          background="lightBlue"
          size="md"
          hoverable={true}
        />
      ))}
    </div>
  </Container>
</section>

<style define:vars={{
  surfacePrimary: semantic.color.surface.primary,
  spaceSection: semantic.spacing.section,
  space2xl: semantic.space['2xl'],
  spaceXl: semantic.space.xl,
  spaceMd: semantic.space.md,
}}>
/* Statistics Section Styles - Using Design System */
.hg-statistics-section {
  padding: var(--spaceSection) 0;
  background: var(--surfacePrimary);
}

.section-header {
  margin-bottom: var(--space2xl);
}

.hg-stats-grid {
  display: flex;
  justify-content: center;
  align-items: stretch;
  gap: var(--spaceXl);
  flex-wrap: wrap;
}

/* Responsive design */
@media (max-width: 768px) {
  .hg-stats-grid {
    flex-direction: column;
    align-items: center;
    gap: var(--spaceMd);
  }
}
</style>