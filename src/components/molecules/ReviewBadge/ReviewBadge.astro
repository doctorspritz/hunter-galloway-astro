---
/**
 * ReviewBadge Molecule
 * Logo with review text
 */

interface Props {
  logoSrc: string;
  text: string;
  className?: string;
}

const { logoSrc, text, className = '' } = Astro.props;
---

<div class={`review-badge ${className}`}>
  <div class="review-badge__logo">
    <img src={logoSrc} alt="Reviews logo" />
  </div>
  <div class="review-badge__text">
    <span set:html={text}></span>
  </div>
</div>

<style>
.review-badge {
  display: flex;
  align-items: center;
  gap: 20px;
}

.review-badge__logo {
  width: 108px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.review-badge__logo img {
  max-width: 100%;
  max-height: 100%;
}

.review-badge__text {
  color: #262626;
  font-size: 16px;
  font-weight: 400;
  line-height: 24px;
}
</style>
