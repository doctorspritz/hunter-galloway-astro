---
/**
 * NavDropdown Molecule - Hunter Galloway Mega Menu (legacy-correct)
 */

import { semantic } from '../../../tokens/semantic';

export interface NavDropdownLink {
  label: string;
  url: string;
  badge?: string;
}

export interface NavDropdownColumn {
  heading: string;
  links: NavDropdownLink[];
  readMore?: { label: string; url: string };
}

export interface NavDropdownPromo {
  title: string;
  description: string;
  cta: { label: string; url: string };
}

export interface NavDropdownPromoImage {
  imageUrl: string;
  title: string;
  url: string;
}

export interface NavDropdownProps {
  columns: NavDropdownColumn[];
  promo?: NavDropdownPromo;
  promoImage?: NavDropdownPromoImage;
}

const {
  columns = [],
  promo,
  promoImage,
} = Astro.props as NavDropdownProps;

// Determine layout class based on content
const layoutClass = promoImage ? 'hg-dropdown--with-image' : 
                   promo ? 'hg-dropdown--with-promo' : 
                   'hg-dropdown--standard';
---

<div class={`hg-dropdown ${layoutClass}`}>
  <div class="hg-dropdown__container">
    <!-- Main columns -->
    <div class="hg-dropdown__columns">
      {columns.map((column) => (
        <div class="hg-dropdown__column">
          {column.heading && (
            <h3 class="hg-dropdown__heading">{column.heading}</h3>
          )}
          <ul class="hg-dropdown__list">
            {column.links.map((link) => (
              <li class="hg-dropdown__item">
                <a href={link.url} class="hg-dropdown__link">
                  {link.label}
                  {link.badge && (
                    <span class="hg-dropdown__badge">{link.badge}</span>
                  )}
                </a>
              </li>
            ))}
          </ul>
          {column.readMore && (
            <a href={column.readMore.url} class="hg-dropdown__read-more">
              {column.readMore.label} â†’
            </a>
          )}
        </div>
      ))}
    </div>
    
    <!-- Promo Card -->
    {promo && (
      <div class="hg-dropdown__promo">
        <h3 class="hg-dropdown__promo-title">{promo.title}</h3>
        <p class="hg-dropdown__promo-description">{promo.description}</p>
        <a href={promo.cta.url} class="hg-dropdown__promo-cta">
          {promo.cta.label}
        </a>
      </div>
    )}
    
    <!-- Promo Image Card -->
    {promoImage && (
      <a href={promoImage.url} class="hg-dropdown__image-card">
        <img 
          src={promoImage.imageUrl} 
          alt={promoImage.title}
          class="hg-dropdown__image"
        />
        <div class="hg-dropdown__image-overlay">
          <h4 class="hg-dropdown__image-title">{promoImage.title}</h4>
        </div>
      </a>
    )}
  </div>
</div>

<style define:vars={{
  brandPrimary: semantic.color.brand.primary,
  brandAccent: semantic.color.brand.legacyAccent,
  textPrimary: semantic.color.text.primary,
  surfaceWhite: semantic.color.surface.white,
  surfaceLight: semantic.color.surface.secondary,
  shadowDropdown: semantic.shadow.dropdown,
}}>
/* Base dropdown styles */
.hg-dropdown {
  position: absolute;
  top: calc(100% + 10px);
  left: 50%;
  transform: translateX(-50%) translateY(-10px);
  background: var(--surfaceWhite);
  border-radius: 8px;
  box-shadow: var(--shadowDropdown);
  padding: 2rem;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: all 0.3s ease;
  z-index: 1000;
  min-width: 600px;
}

.hg-dropdown.visible,
.hg-nav-item:hover .hg-dropdown {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
  transform: translateX(-50%) translateY(0);
}

/* Layout variants */
.hg-dropdown--standard {
  width: 735px;
}

.hg-dropdown--with-promo {
  width: 820px;
}

.hg-dropdown--with-image {
  width: 900px;
}

.hg-dropdown__container {
  display: flex;
  gap: 2rem;
}

/* Columns */
.hg-dropdown__columns {
  display: flex;
  gap: 3rem;
  flex: 1;
}

.hg-dropdown__column {
  min-width: 180px;
  flex: 1;
}

/* Headings */
.hg-dropdown__heading {
  font-size: 0.85rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--textPrimary);
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--brandAccent);
  display: inline-block;
}

/* Links */
.hg-dropdown__list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.hg-dropdown__item {
  margin-bottom: 0.75rem;
}

.hg-dropdown__link {
  position: relative;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--textPrimary);
  font-size: 0.95rem;
  font-weight: 600;
  text-decoration: none;
  padding-left: 1rem;
  transition: color 0.2s ease;
}

.hg-dropdown__link:before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6px;
  height: 6px;
  background: var(--brandAccent);
  border-radius: 50%;
}

.hg-dropdown__link:hover {
  color: var(--brandPrimary);
}

/* Badge */
.hg-dropdown__badge {
  display: inline-block;
  padding: 0.125rem 0.375rem;
  background: var(--brandPrimary);
  color: var(--surfaceWhite);
  font-size: 0.7rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-radius: 3px;
}

/* Read More Link */
.hg-dropdown__read-more {
  display: inline-block;
  margin-top: 1rem;
  color: var(--brandPrimary);
  font-size: 0.9rem;
  font-weight: 600;
  text-decoration: none;
  transition: transform 0.2s ease;
}

.hg-dropdown__read-more:hover {
  transform: translateX(3px);
}

/* Promo Card */
.hg-dropdown__promo {
  flex-shrink: 0;
  width: 280px;
  padding: 1.5rem;
  background: var(--surfaceLight);
  border-radius: 8px;
}

.hg-dropdown__promo-title {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--textPrimary);
  margin-bottom: 0.75rem;
  line-height: 1.3;
}

.hg-dropdown__promo-description {
  font-size: 0.9rem;
  color: var(--textPrimary);
  margin-bottom: 1.25rem;
  line-height: 1.5;
}

.hg-dropdown__promo-cta {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background: var(--brandPrimary);
  color: var(--surfaceWhite);
  font-size: 0.95rem;
  font-weight: 700;
  text-decoration: none;
  border-radius: 25px;
  transition: all 0.3s ease;
}

.hg-dropdown__promo-cta:hover {
  background: var(--brandAccent);
  transform: translateY(-2px);
  box-shadow: var(--shadowDropdown);
}

/* Image Card */
.hg-dropdown__image-card {
  flex-shrink: 0;
  width: 240px;
  height: 160px;
  position: relative;
  overflow: hidden;
  border-radius: 8px;
  text-decoration: none;
  transition: transform 0.3s ease;
}

.hg-dropdown__image-card:hover {
  transform: scale(1.02);
}

.hg-dropdown__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hg-dropdown__image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 1rem;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}

.hg-dropdown__image-title {
  color: var(--surfaceWhite);
  font-size: 0.9rem;
  font-weight: 600;
  line-height: 1.3;
  margin: 0;
}

/* Mobile styles */
@media (max-width: 991px) {
  .hg-dropdown {
    position: fixed;
    top: 0;
    left: 100%;
    right: -100%;
    bottom: 0;
    transform: none;
    width: 100%;
    max-width: none;
    min-width: auto;
    border-radius: 0;
    padding: 1.5rem;
    overflow-y: auto;
  }
  
  .hg-dropdown.visible {
    left: 0;
    right: 0;
    opacity: 1;
  }
  
  .hg-dropdown__container {
    flex-direction: column;
  }
  
  .hg-dropdown__columns {
    flex-direction: column;
    gap: 2rem;
  }
  
  .hg-dropdown__promo,
  .hg-dropdown__image-card {
    width: 100%;
  }
  
  .hg-dropdown__image-card {
    height: 200px;
  }
}
</style>
