---
/**
 * BenefitCard Component
 * Hunter Galloway Design System - Molecular Component
 * 
 * A card component for displaying benefits with icons, titles, and descriptions.
 * Used primarily in WhyChooseWidget sections for trust-building content.
 * Built to match the WordPress why_choose_item pattern exactly.
 */

import type { BenefitCardProps } from './BenefitCard.types';
import Icon from '../../atoms/Icon/Icon.astro';
import { semantic } from '../../../tokens/semantic';

interface Props extends BenefitCardProps {}

const {
  icon,
  title,
  description,
  variant = 'default',
  class: additionalClasses = '',
} = Astro.props;

// Build CSS classes based on variant
const cardClasses = [
  'hg-benefit-card',
  'why_choose_item', // WordPress compatibility class
  `hg-benefit-card--${variant}`,
  additionalClasses,
].filter(Boolean).join(' ');
---

<div class={cardClasses}>
  <div class="benefit-icon">
    <Icon name={icon} size="lg" color="primary" />
  </div>
  <div class="benefit-title">{title}</div>
  <div class="benefit-description">{description}</div>
</div>

<style define:vars={{
  surfaceAccent: semantic.color.surface.accent,
  surfaceHighlight: semantic.color.surface.highlight,
  surfaceSecondary: semantic.color.surface.secondary,
  textPrimary: semantic.color.text.primary,
  textSecondary: semantic.color.text.secondary,
  brandPrimary: semantic.color.brand.primary,
  fontSize4xl: semantic.typography.size['4xl'], // 40px for WordPress compatibility
  fontSizeLg: semantic.typography.size.lg,
  fontSizeMd: semantic.typography.size.md,
  fontSizeSm: semantic.typography.size.sm,
  fontWeightDisplay: semantic.typography.weight.display,
  fontWeightHeading: semantic.typography.weight.heading,
  fontWeightEmphasis: semantic.typography.weight.emphasis,
  lineHeightTight: semantic.typography.lineHeight.tight,
  lineHeightBody: semantic.typography.lineHeight.body,
  radiusMd: semantic.radius.md,
  spaceLg: semantic.space.lg,
  spaceMd: semantic.space.md,
  spaceSm: semantic.space.sm,
  durationNormal: semantic.duration.normal,
}}>
/* BenefitCard component styles - WordPress exact implementation */
.hg-benefit-card {
  text-align: center;
  border-radius: var(--radiusMd);
  padding: var(--spaceLg);
  transition: transform var(--durationNormal) ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spaceSm);
}

.hg-benefit-card:hover {
  transform: translateY(-4px);
}

/* Style variant: default - WordPress standard light blue background */
.hg-benefit-card--default {
  background: linear-gradient(0deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), #5BD5FA;
}

/* Style variant: light - softer background */
.hg-benefit-card--light {
  background: var(--surfaceAccent);
}

/* Style variant: featured - highlighted background with border */
.hg-benefit-card--featured {
  background: var(--surfaceHighlight);
  border: 2px solid var(--brandPrimary);
}

.benefit-icon {
  margin-bottom: var(--spaceSm);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 96px; /* WordPress exact icon container size */
  height: 96px;
}

.benefit-title {
  font-size: var(--fontSizeLg); /* 20px - WordPress exact */
  font-weight: var(--fontWeightHeading); /* Bold - WordPress exact */
  color: var(--textPrimary);
  line-height: 1.25; /* 25px line-height from WordPress */
  margin-bottom: 8px; /* WordPress exact margin */
}

.benefit-description {
  font-size: var(--fontSizeSm); /* 14px - WordPress exact */
  color: var(--textSecondary);
  line-height: var(--lineHeightBody); /* 20px - WordPress exact */
  margin: 0;
}

/* Responsive design matching WordPress patterns */
@media (max-width: 768px) {
  .hg-benefit-card {
    padding: var(--spaceMd);
    margin-bottom: var(--spaceMd);
  }
  
  .benefit-icon {
    width: 80px;
    height: 80px;
  }
  
  .benefit-title {
    font-size: var(--fontSizeMd);
  }
  
  .benefit-description {
    font-size: var(--fontSizeSm);
  }
}

/* WordPress compatibility - maintain original class name */
.why_choose_item {
  width: 100%;
}
</style>